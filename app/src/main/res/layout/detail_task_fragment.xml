<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
                name="viewModel"
                type="com.example.mysampleapp.detailtask.DetailTaskViewModel" />
    </data>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".detailtask.DetailTaskFragment">

        <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="@{viewModel.title}"
                tools:text="Title"
                android:background="@drawable/all_line_1dp_gray"/>

        <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="14dp"
                android:text="@{viewModel.content}"
                tools:text="Contents"
                android:layout_below="@id/tv_title"
                android:background="@drawable/all_line_1dp_gray"/>

        <ProgressBar
                android:id="@+id/progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="@{viewModel.loading ? View.VISIBLE : View.GONE, default=gone}"/>

    </RelativeLayout>
</layout>